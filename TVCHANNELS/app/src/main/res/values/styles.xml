<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- Action bar color -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="actionBarStyle">@style/themeActionBar</item>
        <item name="actionModeBackground">@color/main_color</item>
        <item name="actionModeCloseDrawable">@drawable/ic_clear_white_24dp</item>
        <!--<item name="actionBarTabTextStyle">@style/styleActionBarTabText</item>-->
        <!--<item name="actionMenuTextColor">@color/actionbar_text</item>-->
        <!--<item name="actionBarTabStyle">@style/styleActionBarTabs</item>-->

        <!-- Status bar color, the first item is used for AppCompat -->
        <item name="colorPrimaryDark">@color/main_color_alpha20</item>
        <!--<item name="android:statusBarColor" tools:targetApi="lollipop">@color/main_color</item>-->

        <item name="ic_down_right_arrow">@drawable/ic_down_right_arrow</item>
        <item name="selector">@drawable/selector</item>
    </style>

    <!-- ActionBar styles -->
    <style name="themeActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/styleActionBarTitleText</item>
        <item name="subtitleTextStyle">@style/styleActionBarSubTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="styleActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- ActionBar title text -->
    <style name="styleActionBarSubTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- ActionBar tabs text -->
    <style name="styleActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="styleTextViewTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="styleTextViewDesc">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_desc</item>
    </style>

    <style name="styleAboutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/row_about_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/selector</item>
    </style>

    <!-- EditText -->
    <style name="styleEditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textCursorDrawable" tools:targetApi="honeycomb_mr1">@null</item>
        <item name="android:textColorHint">@color/text_desc</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
</resources>
