<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:src="@drawable/profile_icon_valentine" />

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:src="@drawable/profile_icon_halloween" />

        <ImageButton
            android:id="@+id/btn3"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:src="@drawable/profile_icon_women" />
    </LinearLayout>

    <com.zing.demo.uicontrol.DrawImage
        android:id="@+id/imvDemo"
        android:layout_width="28.0dip"
        android:layout_height="28.0dip"
        android:layout_gravity="center"
        android:layout_marginTop="20.0dip"
        android:src="@drawable/profile_icon_valentine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:background="@drawable/bg_gradient" />

        <com.zing.demo.uicontrol.GradientView
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:layout_marginLeft="5.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Drawable\nCode" />
        </com.zing.demo.uicontrol.GradientView>
    </LinearLayout>

</LinearLayout>